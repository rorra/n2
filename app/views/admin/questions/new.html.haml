%h2 Create a Question
= semantic_form_for [:admin, @question], :html => { :multipart => true } do |form|
  = render :partial => 'form', :locals => { :form => form }
  = form.buttons do
    = form.commit_button 'Create'
    = form.commit_button 'Cancel', :button_html => {:class => 'follow_link', :href => admin_questions_path}
